local prompt = script.Parent:WaitForChild("ProximityPrompt")
local tool_meat = game.ServerStorage:WaitForChild("Meat1")

prompt.Triggered:Connect(function(player)
	
	if player.Character and not player.Backpack:FindFirstChild(tool_meat.Name) and not player.Character:FindFirstChild(tool_meat.Name) then
		
		local tool1 = tool_meat:Clone()
		
		player.Character.Humanoid:EquipTool(tool1)
	end
end)
